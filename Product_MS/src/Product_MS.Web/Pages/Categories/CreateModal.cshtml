@page
@using Product_MS.Localization
@using Product_MS.Web.Pages.Categories
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<Product_MSResource> L
@{
    Layout = null;
}
<form asp-page="/Categories/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCategory"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Category.Name" />
        
            <abp-input asp-for="Category.Description" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
